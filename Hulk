#include <bits/stdc++.h>
using namespace std;
int const N = 5e5 + 5, mod = 1e9 + 7, oo = 1e5 + 10;
typedef long long ll;
int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    /***/
    ll n;
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        if(n%2==0)
        {
            if(i == n)
             cout<<"I love it"<<endl;
           else if(i%2 != 0)
             cout<<"I hate that"<<" ";
           else
             cout<<"I love that"<<" ";
 
        }else if(n %2 != 0)
        {
           if(i == n)
             cout<<"I hate it"<<endl;
           else if(i%2 != 0)
             cout<<"I hate that"<<" ";
           else
             cout<<"I love that"<<" ";
        }
    }
    return 0;
}
