#include <bits/stdc++.h>
using namespace std;
int const N = 5e5 + 5, mod = 1e9 + 7, oo = 1e5 + 10;
typedef long long ll;
int main()
{
    ll n;
    cin>>n;
    for(int i=1; i<=n;i++)
    {
        for(int j=0;j<n-i;j++)
        {
            cout<<" ";
        }
        for(int h=1;h<=(i*2)-1;h++)
        {
            cout<<"*";
        }
        cout<<""<<endl;
    }
    return 0;
}
